		<h2>bike index</h2>
		<!--books一覧 -->
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
					<th colspan="3"></th>
				</tr>
			</thead>

			<tbody>
				<% @items.each do |item| %>
					<tr>
						<td>
							<%= link_to(item.user) do %>
								<%= attachment_image_tag(item.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
							<% end %>
						</td>
						<td><%= link_to item.bike_name, item, class: "item_#{item.id}" %></td>
						<td><%= item.content %></td>
						<td>
							<% if item.favorited_by?(current_user) %>
									<%= link_to item_favorites_path(item), method: :delete do %>
										<%= item.favorites.count  %> いいね
										<i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
									<% end %>
								<% else %>
									<%= link_to item_favorites_path(item), method: :post do %>
									<%= item.favorites.count %> いいね
									<i class="fa fa-heart-o" aria-hidden="true"></i>
								<% end %>
							<% end %>
						</td>
						<td>コメント数：　<%= item.item_comments.count %></td>
					</tr>
				<% end %>
			</tbody>
		</table>