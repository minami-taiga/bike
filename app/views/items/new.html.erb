<section class="slice sct-color-1">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="top-content">
          <div class="row">
            <div class="col-md-6 col-md-offset-3">
              <div class="section-title-wrapper style-1 v1">
                <h3 class="white-text">画像投稿フォーム</h3>
              </div>
              <%= form_for(@item, url: items_path) do |f| %>
                <% if @item.errors.any? %>
                  <div id="error_explanation">
                    <ul class="white-text">
                      <% @item.errors.full_messages.each do |message| %>
                        <li>
                          <%= message %>
                        </li>
                        <% end %>
                    </ul>
                  </div>
                  <% end %>
                    <div class="row">
                      <div class="col-sm-12">
                        <div class="white-text">
                          <%= f.attachment_field :image %>
                        </div>
                      </div>
                    </div> <br>
                    <div class="row">
                      <div class="col-sm-6">
                        <div class="form-group has-icon"> <label class="control-label sr-only">バイク名</label>
                          <%= f.text_field :bike_name, class:"form-control", placeholder:"バイク名" %> <span class="fa fa-building form-control-icon" aria-hidden="true"></span> </div>
                      </div>
                      <div class="col-sm-6"> </div>
                    </div>
                    <div class="row">
                      <div class="col-sm-12">
                        <%= f.text_area :content, class:"form-control", rows:"3", placeholder:"本文ここに" %>
                      </div>
                    </div> <br>
                    <%= f.submit "送信", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
                      <% end %> <br> </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>